<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/textNumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="NUMBER"
            android:textColor="#006BDC"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textSpecificNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNumTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:text="00"
            android:textColor="#006BDC"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textSessionCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textSpecificNum"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-10dp"
            android:text="SESSION:"
            android:textColor="#DC7100"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textNumCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textSessionCounter"
            android:layout_marginLeft="10dp"
            android:text="NUM:"
            android:textColor="#DC7100"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textFlickCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textNumCounter"
            android:layout_marginLeft="10dp"
            android:text="FLICK:"
            android:textColor="#DC7100"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textOriX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textFlickCounter"
            android:layout_marginLeft="10dp"
            android:text="X pitch:"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/textOriY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textOriX"
            android:layout_marginLeft="10dp"
            android:text="Y roll:"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/textOriZ"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textOriY"
            android:layout_marginLeft="10dp"
            android:text="Z azi:"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/textRawX"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textOriZ"
            android:layout_marginLeft="10dp"
            android:text="rawX:"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/textRawY"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRawX"
            android:layout_marginLeft="10dp"
            android:text="rawY:"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/textPressure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRawY"
            android:layout_marginLeft="10dp"
            android:text="pressure:"
            android:textSize="7dp" />

        <TextView
            android:id="@+id/textSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPressure"
            android:layout_marginLeft="10dp"
            android:text="size:"
            android:textSize="7dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >
    </ListView>

</RelativeLayout>